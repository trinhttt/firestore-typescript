{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true, //allow import json file
    "esModuleInterop": true, // (allow ignore * as)Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports 
    "noImplicitAny": false, //  allow using external libraries without TypeScript definition files.
    "types": ["jest"],
    "noEmit": true
  },
  "compileOnSave": true,
  "include": [
    "src"
, "tests"  ],
}